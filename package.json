{
  "name": "mv",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.0",
    "@reduxjs/toolkit": "^1.2.5",
    "archiver": "5",
    "customize-cra": "^0.9.1",
    "electron": "23.1.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-store": "8",
    "electron-unhandled": "^3.0.2",
    "node-stream-zip": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "puppeteer-core": "18.1",
    "react": "^16.13.0",
    "react-app-rewired": "^2.1.3",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "react-virtuoso": "^0.13.5",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "typescript": "5",
    "which": "^2.0.1"
  },
  "main": "./index.js",
  "scripts": {
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "build": "run-p build:*",
    "build:backend": "NODE_OPTIONS=--openssl-legacy-provider webpack-cli --config webpack.backend.js",
    "build:react": "NODE_OPTIONS=--openssl-legacy-provider react-app-rewired build",
    "electron": "electron ./build",
    "start-prod": "NODE_ENV=production run-s build electron",
    "start": "run-p watch:*",
    "watch:electron": "electron .",
    "watch:react": "NODE_OPTIONS=--openssl-legacy-provider BROWSER=none react-app-rewired start",
    "lint": "eslint './src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,tsx}'",
    "package": "NODE_ENV=production run-s build package:*",
    "package:copy": "cp ./package.json ./build/package.json",
    "package:electron": "electron-packager build MangaViewer --platform=darwin --arc=x64 --overwrite=true --out=release",
    "package-win": "NODE_ENV=production run-s build package-win:*",
    "package-win:copy": "cp ./package.json ./build/package.json",
    "package-win:electron": "electron-packager build MangaViewer --platform=win32 --arc=x64 --overwrite=true --out=release"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.0",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.0",
    "@types/which": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "electron-packager": "^14.2.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.18.2",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "webpack-cli": "^3.3.11",
    "worker-loader": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
